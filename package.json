{
  "name": "my-settings",
  "version": "0.0.1-alpha.0",
  "description": "My personal computer setting script",
  "main": "index.ts",
  "bin": ".caches/my-settings.js",
  "repository": "https://github.com/kamontat/my_settings",
  "author": "Kamontat Chantrachirathumrong <kamontat_c@hotmail.com>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "execa": "1.0.0",
    "kleur": "^3.0.0",
    "prompts": "1.2.1",
    "tracer": "0.9.6",
    "yargs": "12.0.5"
  },
  "devDependencies": {
    "@types/execa": "0.9.0",
    "@types/jest": "23.3.9",
    "@types/node": "10.12.10",
    "@types/yargs": "12.0.1",
    "babel-jest": "23.6.0",
    "jest": "23.6.0",
    "jest-extended": "0.11.0",
    "jest-junit": "5.2.0",
    "jest-raw-loader": "1.0.1",
    "pkg": "4.3.4",
    "rimraf": "2.6.2",
    "to-string-loader": "1.1.5",
    "ts-jest": "23.10.5",
    "ts-loader": "5.3.0",
    "tslint": "5.11.0",
    "tslint-loader": "3.5.4",
    "typescript": "3.1.6",
    "uglify-js": "3.4.9",
    "webpack": "4.26.0",
    "webpack-bundle-analyzer": "3.0.3",
    "webpack-cli": "3.1.2",
    "webpack-node-externals": "1.7.2"
  },
  "scripts": {
    "compile": "webpack",
    "compile:prod": "webpack --mode=production",
    "compile:watch": "webpack --watch",
    "start": "node .caches/my-settings.js",
    "clean": "rimraf bin .caches *.log log",
    "clean:all": "rimraf bin .caches *.log log node_modules yarn.lock",
    "build": "yarn compile:prod && pkg --out-path bin .",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "pkg": {
    "assets": [
      "package.json"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./test/jest.setup.js",
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/src/**/__tests__/**/*.ts?(x)",
      "**/src/**/?(*.)+(spec|test).ts?(x)"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text-summary"
    ],
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "output": "coverage/reporter/junit/result.xml"
        }
      ]
    ],
    "globals": {
      "COMPILED_DATE": 1543003978
    }
  }
}
